<section class="vh-100">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 text-black">
        <% if @user.present? && @user.errors.any? %>
          <div class="alert alert-danger alert-dismissible">
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li> <%= message %> </li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="px-5 ms-xl-4 mt-4">
          <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
          <span class="h1 fw-bold mb-0">Coffee Bean</span>
        </div>

        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

          <%= form_tag(registers_path, method: 'post', style: "width: 23rem;") do %>

            <%= render 'form' %>

            <p>Já tem uma conta? <%= link_to 'Clique aqui e faça seu login', login_index_path, class: 'link-info' %></p>

          <% end %>
        </div>
      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcST8mOYbCRw3GFOW37IieZJrdCHkPb5IdtjEQ&usqp=CAU"
          alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
      </div>
    </div>
  </div>
</section>

<script>
  $(function () {
    $('[data-toggle="tooltip"]').tooltip()
  })
</script>